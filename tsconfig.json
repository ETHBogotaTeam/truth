{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    //"module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "esnext"
  },
  // "ts-node": {
  //   // these options are overrides used only by ts-node
  //   // same as the --compilerOptions flag and the TS_NODE_COMPILER_OPTIONS environment variable
  //   "compilerOptions": {
  //     "module": "commonjs"
  //   }
  // },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/noir.tsx",
    "pages/api/sexytime.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
